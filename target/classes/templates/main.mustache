<html>
<body>
    <div>
        <div>
            <form action="/logout" method="post">
                <input type="hidden" username="_csrf" value="{{_csrf.token}}">
                <input type="submit" value="Sign Out"/>
            </form>
        </div>
        <form method ="post">
            <input type="hidden" username="_csrf" value="{{_csrf.token}}">
            <input type="text" username="text" placeholder="Введите сообщение">
            <input type="text" username="tag" placeholder="Тэг">
            <button type="submit">Добавить</button>
        </form>
    </div>
    <div>
        <form method="post" action="filter">
            <input type="hidden" username="_csrf" value="{{_csrf.token}}">
            <input type="text" username="filter" placeholder="Фильтр">
            <button type="submit">Фильтр</button>
        </form>
    </div>
    <div>Список сообщений</div>
    {{#messages}}
    <div>
        <b>{{id}}</b>
        <span>{{text}}</span>
        <i>{{tag}}</i>
    </div>
    {{/messages}}
</body>
</html>